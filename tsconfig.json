{
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "@alias/*": [
        "alias-folder/*"
      ],
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  },
  "files": [
    "src/index.ts"
  ],
}
